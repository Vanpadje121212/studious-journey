<%- title t('scripts.code_title', :script_name => @script.name(I18n.locale)) %>
<%- description 'Source code for ' + @script.name(I18n.locale) %>

<%=render :partial => 'install', :locals => {:script => @script, :script_version => @script_version}%>

<%=render partial: 'feedback_suggestion', locals: {script: @script} %>

<% if @show_ad %>
  <!-- BEGIN COPY CODEFUND EMBED -->
  <div id="codefund"></div>
  <script
    src="https://codefund.io/properties/549/funder.js"
    async="async"></script>
  <!-- END COPY CODEFUND EMBED -->
<% end %>

<script src="https://cdn.jsdelivr.net/gh/google/code-prettify@master/loader/run_prettify.js?lang=js&lang=css"></script>

<pre <% if @code.length <= Rails.configuration.syntax_highlighting_limit %>class="prettyprint <%= @script.css? ? 'lang-css' : 'lang-js' %>"<% end %>><%=@code%></pre>
