<%- title t('scripts.report.title', script_name: @script.name(I18n.locale)) %>
<%- description "Report #{@script.name(I18n.locale)} for a violation of the rules." %>

<%= it('scripts.report.text_html',
       rules_link: help_code_rules_path,
       site_name: site_name,
       feedback_link: It.link("#{forum_path}post/discussion?script=#{@script.id}", rel: :nofollow),
       script_name: @script.name(I18n.locale),
       unauthorized_link: It.link(new_script_script_report_path(@script, report_type: ScriptReport::TYPE_UNAUTHORIZED_CODE), rel: :nofollow),
       malware_link: It.link(new_script_script_report_path(@script, report_type: ScriptReport::TYPE_MALWARE), rel: :nofollow),
       spam_link: It.link(new_script_script_report_path(@script, report_type: ScriptReport::TYPE_SPAM), rel: :nofollow),
       other_report_link: It.link("#{forum_path}post/discussion?script=#{@script.id}", rel: :nofollow),
    ) %>
