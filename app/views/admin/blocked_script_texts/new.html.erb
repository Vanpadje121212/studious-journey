<%= form_with(model: [:admin, @blocked_script_text]) do |f| %>
  <div class="form-control">
    <%= f.label :text %>
    <%= f.text_field :text, required: true %>
  </div>

  <div class="form-control">
    <%= f.label :result %>
    <%= f.select :result, [BlockedScriptText::RESULT_CODE_REVIEW, BlockedScriptText::RESULT_CODE_BAN] %>
  </div>

  <div class="form-control">
    <%= f.label :public_reason %>
    <%= f.text_field :public_reason, required: true %>
  </div>

  <div class="form-control">
    <%= f.label :private_reason %>
    <%= f.text_field :private_reason, required: true %>
  </div>

  <%= f.submit %>
<% end %>
