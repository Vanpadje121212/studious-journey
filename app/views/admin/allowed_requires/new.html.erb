<%= form_with(model: [:admin, @allowed_require]) do |f| %>
  <div class="form-control">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="form-control">
    <%= f.label :url %>
    <%= f.url_field :url %>
  </div>

  <div class="form-control">
    <%= f.label :pattern %>
    <%= f.text_field :pattern, required: true %>
  </div>

  <div class="form-control">
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>

  <%= f.submit %>
<% end %>
