<!DOCTYPE html>
<html>
<head>
	<title><%= content_for?(:title) ? content_for(:title) : "Greasy Fork" %></title>
	<% if content_for?(:description) %><meta name="description" value="<%=content_for(:description)%>"><% end %>
	<%= stylesheet_link_tag    "application", media: "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<% if defined?(@bots) %>
		<meta name="robots" content="<%=@bots%>">
	<% end %>
	<link rel="icon" href="<%=asset_path 'blacklogo16.png'%>">
	<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
	<% if request.get?
		# https://support.google.com/webmasters/answer/189077
		Rails.configuration.available_locales.each do |code, name|
			if code == 'en' %>
				<link rel="alternate" hreflang="<%=code%>" href="<%=url_for(params.except(:locale).merge({:locale => nil, :only_path => false}))%>">
			<% else %>
				<link rel="alternate" hreflang="<%=code%>" href="<%=url_for(params.except(:locale).merge({:locale => code, :only_path => false}))%>">
			<% end
		end
	end %>
	<% if defined?(@feeds)
		@feeds.each do |title, url_params| %>
			<%=auto_discovery_link_tag(:atom, params.merge(url_params).merge({:only_path => true, :page => nil}), {:title => title})%>
		<% end
	end %>
</head>
<body>

	<header id="main-header">
		<div id="site-name">
			<%=link_to_unless_current "<img src=\"#{asset_path 'blacklogo96.png'}\" alt=\"\">".html_safe, root_path%>
			<div id="site-name-text">
				<h1><%=link_to_unless_current 'Greasy Fork', root_path%></h1>
				<p class="subtitle">One does not simply grease a fork!</p>
			</div>
		</div>
		<div id="site-nav">
			<div id="nav-user-info">
				<% if user_signed_in? %>
					<span class="user-profile-link"><%=link_to(current_user.name, current_user)%></span>
				<% else %>
					<span class="sign-in-link"><%=link_to(t('.sign_in'), new_user_session_path, {:rel => 'nofollow'})%></span>
				<% end %>
				<% if request.get?
					form_action = url_for(params.except(:locale).merge({:locale => nil}))
				else
					form_action = root_path({:locale => nil})
				end %>
				<form id="language-selector" action="<%=form_action%>">
					<select id="language-selector-locale" name="locale">
						<% Rails.configuration.available_locales.each do |code, name|
							if request.get?
								if code == 'en' %>
									<option data-language-url="<%=url_for(params.except(:locale).merge({:locale => nil}))%>" value="<%=code%>"<%if params[:locale] == code or params[:locale].nil?%> selected<%end%>><%=name%> (<%=code%>)</option>
								<% else %>
									<option data-language-url="<%=url_for(params.except(:locale).merge({:locale => code}))%>" value="<%=code%>"<%if params[:locale] == code%> selected<%end%>><%=name%> (<%=code%>)</option>
								<% end
							else
								if code == 'en' %>
									<option data-language-url="<%=root_path({:locale => nil})%>" value="<%=code%>"<%if params[:locale] == code or params[:locale].nil?%> selected<%end%>><%=name%> (<%=code%>)</option>
								<% else %>
									<option data-language-url="<%=root_path({:locale => code})%>" value="<%=code%>"<%if params[:locale] == code%> selected<%end%>><%=name%> (<%=code%>)</option>
								<% end
							end
						end %>
						<option value="help">Help us translate!</option>
					</select><input id="language-selector-submit" type="submit" value="→">
					<script>
						/* submit is handled by js if enabled */
						document.getElementById("language-selector-submit").style.display = "none"
					</script>
				</form>
			</div>
			<nav>
				<li class="scripts-index-link"><%=link_to(t('.script_list'), scripts_path)%></li>
				<% # user signed in to main site, but not to forum?
				if user_signed_in? and cookies[:Vanilla].nil? %>
					<li class="forum-link"><%=link_to(t('.forum'), '/forum/entry/jsconnect?client_id=1462516369')%></li>
				<% else %>
					<li class="forum-link"><%=link_to(t('.forum'), '/forum/')%></li>
				<% end %>
				<li class="help-link"><%=link_to_unless_current(t('.help'), help_path)%></li>
				<li class="nav-search">
					<form id="script-search" action="<%=search_scripts_path()%>">
						<input type="search" name="q" placeholder="<%=t('.search')%>" value="<%=params[:q]%>" size="10"><input type="submit" value="→">
					</form>
				</li>
			</nav>
		</div>
	</header>

<% if !notice.nil? %>
	<p class="notice"><%=notice%></p>
<% end %>
<% if !alert.nil? %>
	<p class="alert"><%=alert%></p>
<% end %>

<%= content_for?(:content) ? yield(:content) : yield %>

